<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Cache directories for cropping - CRITICAL -->
    <external-cache-path
        name="external_crop_cache"
        path="crop_cache/" />
    <external-cache-path
        name="external_crop_root"
        path="crop_cache" />
    <cache-path
        name="internal_crop_cache"
        path="crop_cache/" />
    <cache-path
        name="internal_crop_root"
        path="crop_cache" />
    <external-cache-path
        name="external_source_images"
        path="source_images/" />
    <external-cache-path
        name="external_source_root"
        path="source_images" />
    <cache-path
        name="internal_source_images"
        path="source_images/" />
    <cache-path
        name="internal_source_root"
        path="source_images" />
    
    <!-- New internal files crop directory - CRITICAL -->
    <files-path
        name="internal_crop_images"
        path="crop_images/" />
    <files-path
        name="internal_crop_root"
        path="crop_images" />
        
    <!-- New internal source images directory - CRITICAL -->
    <files-path
        name="internal_source_images_dir"
        path="source_images/" />
    <files-path
        name="internal_source_root"
        path="source_images" />
    
    <!-- Primary path for cropped images - root cache directory -->
    <external-cache-path
        name="external_cache"
        path="." />
    <cache-path
        name="cache"
        path="." />
        
    <!-- App-specific external storage paths -->
    <external-files-path
        name="external_files"
        path="." />
    <external-files-path
        name="images"
        path="Pictures/" />
    <external-files-path
        name="documents"
        path="Documents/" />
    <external-files-path
        name="pdf"
        path="Documents/" />
    <external-files-path
        name="csv"
        path="Documents/" />
    
    <!-- Internal files -->
    <files-path
        name="files"
        path="." />
    <files-path
        name="internal_files"
        path="." />
    
    <!-- External storage -->
    <external-path
        name="external"
        path="." />
    <external-path
        name="external_documents"
        path="Documents/" />
    <external-path
        name="downloads"
        path="Download/" />
    
    <!-- External media directories (Android 10+) -->
    <external-media-path
        name="media"
        path="." />
    
    <!-- Root path for absolute paths -->
    <root-path
        name="root"
        path="." />
</paths>